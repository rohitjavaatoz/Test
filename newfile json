CREATE TABLE IF NOT EXISTS ucmcmt.api_messages
(
    api_message_id integer NOT NULL DEFAULT nextval('email_and_api_messages_id_seq'::regclass),
    message_id integer,
    api_payload json,
    party_id integer,
    created_date timestamp without time zone,
    created_by character varying COLLATE pg_catalog."default",
    modified_date timestamp without time zone,
    modified_by character varying COLLATE pg_catalog."default",
    api_message_status_id integer,
    parent_api_message_id integer,
    retry_request_creation_count integer,
    is_fiber boolean,
    CONSTRAINT api_message_id_pkey PRIMARY KEY (api_message_id)
)
-----------------------------------------------
import com.fasterxml.jackson.annotation.JsonFormat;

import java.util.Date;
import java.util.List;

public class ChangeRequest {

    private String description;
    private List<ExternalReference> externalReference;
    private Location location;
    
    @JsonFormat(pattern = "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'")
    private Date plannedEndTime;
    
    @JsonFormat(pattern = "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'")
    private Date plannedStartTime;
    
    private List<Attachment> attachment;
    private List<TargetEntity> targetEntity;
    private List<RelatedParty> relatedParty;
    private String requestType;
    private String priority;
    private Specification specification;
    private Outage outage;

    // getters and setters

}

class ExternalReference {
    private String id;
    // getters and setters
}

class Location {
    private String name;
    // getters and setters
}

class Attachment {
    private String href;
    private String name;
    private Size size;
    private String attachmentType;
    // getters and setters
}

class Size {
    private double amount;
    // getters and setters
}

class TargetEntity {
    private String name;
    // getters and setters
}

class RelatedParty {
    private String name;
    private String role;
    private String referredType;
    // getters and setters
}

class Specification {
    private String id;
    private String href;
    private String name;
    private String version;
    private String referredType;
    private String type;
    private String schemaLocation;
    private String baseType;
    // getters and setters
}

class Outage {
    private int outageDuration;
    private String outageDurationUom;
    private int outageNumber;

    @JsonFormat(pattern = "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'")
    private Date outageStart;

    @JsonFormat(pattern = "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'")
    private Date outageEnd;
    // getters and setters
}
